{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Align with "type": "module" in package.json
    "moduleResolution": "NodeNext", // Usually needed with NodeNext
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
